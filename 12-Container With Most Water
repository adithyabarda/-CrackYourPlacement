class Solution {
    public int maxArea(int[] height) {
        int ans=0;
        int l=0;
        int r=height.length-1;
        while(l<r)
        {
            int len = Math.min(height[l],height[r]);
            int b = r-l;
            ans=Math.max(ans,(len*b));
            if(height[l]<height[r])
            {
                l++;
            }
            else{
                r--;
            }
        }
        return ans;
    }
}
